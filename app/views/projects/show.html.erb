    <div class="col-xs-12 col-sd-12 col-md-12 col-lg-3">
      <button class="btn btn-lg btn-default btn-project" onclick="window.location.href='<%= tasks_path %>'">
        <p>
          <span class="glyphicon glyphicon-th" aria-hidden="true"></span>
          Tarefas
        </p>
      </button>
    </div>

    <div class="col-xs-12 col-sd-12 col-md-12 col-lg-3">
      <button class="btn btn-lg btn-default btn-project" onclick="window.location.href='<%= task_requirements_path %>'">
        <p>
          <span class="glyphicon glyphicon-th" aria-hidden="true"></span>
