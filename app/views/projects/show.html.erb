<!-- BREADCRUMB -->
<div class="container">
  <div class="row">
    <ol class="breadcrumb">
      <li><%= link_to "Projetos", projects_path %></li>
      <li class="active"><%= @project.name %></li>
    </ol>
  </div>
</div>
<!-- /BREADCRUMB -->

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <p>
        <strong><span class="glyphicon glyphicon-triangle-right" aria-hidden="true"></span> Projeto:</strong>
        <%= @project.name %>
      </p>
      <p>
        <strong><span class="glyphicon glyphicon-stats" aria-hidden="true"></span> Size:</strong>
        <%= @project.size %> Story points
      </p>
      <p>
        <strong><span class="glyphicon glyphicon-calendar" aria-hidden="true"></span> Start date:</strong>
        <%= l @project.start_date %>
      </p>
      <p>
        <strong><span class="glyphicon glyphicon-calendar" aria-hidden="true"></span> End date:</strong>
        <%= l @project.end_date %>
      </p>
      <p>
        <strong><span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span> Local:</strong>
        <%= @project.local.name unless @project.local.nil? %>
      </p>

      <div class="progress">
        <div class="progress-bar progress-bar-default" style="width: <%= @project.progress %>%">
          <%= @project.progress %>% completo
        </div>
      </div>
    </div>
  </div>
</div>

<!-- MODAL -->
<div class="col-xs-12 col-sm-12 col-md-10 col-lg-10">
  <div class="modal fade" id="modal-remove">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">Alerta!</h4>
        </div>
        <div class="modal-body">
          <p>Deseja realmente remover o projeto: <strong><%= @project.name %></strong>?</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
          <%= link_to 'Remover', @project, method: :delete, class: 'btn btn-danger' %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- /MODAL -->

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sd-12 col-md-12 col-lg-3">
      <button class="btn btn-lg btn-default btn-project" onclick="window.location.href='<%= user_stories_path %>'">
        <p>
          <span class="glyphicon glyphicon-th" aria-hidden="true"></span>
          Product backlog
        </p>
      </button>
    </div>

    <div class="col-xs-12 col-sd-12 col-md-12 col-lg-3">
      <button class="btn btn-lg btn-default btn-project" onclick="window.location.href='<%= sprints_path %>'">
