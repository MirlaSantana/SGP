<div class="container">
  <div class="row">
    <%= form_for(@user) do |f| %>

      <% if @user.errors.any? %>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
          <div class="alert alert-danger">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <p><strong>Wops!</strong></p>
            <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        </div>
      <% end %>
    <div class="col-xs-12 col-sm-8 col-md-6 col-lg-6">
              <div class="form-group">
                <%= f.label :email %>
          <%= f.text_field :email, class: 'form-control' %>
              </div>
        
              <div class="form-group">
                <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
              </div>
        
              <div class="form-group">
                <%= f.label :schedule %>
                <%= f.select :schedule, options_for_select([:tarde,:manha,:noite]), {}, { :class => 'form-control' } %> 
              </div>
        
              <div class="form-group">
                <%= f.label :group %>
                <%= f.select :group, options_for_select([:admin,:normal_user]), {}, { :class => 'form-control' } %> 
              </div>
        
              <div class="form-group">
                <%= f.label :local_id %>
                <%= f.collection_select(:local_id,Local.all,:id,:name,{:prompt=>true},{class:'form-control'}) %> 
              </div>
        
              <div class="form-group">
          <%= f.button type: 'submit', class: 'btn btn-primary' do %>
            <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span>
            Salvar
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>    
