<div class="container">
  <div class="row">
    <%= form_for(@sprint) do |f| %>

      <% if @sprint.errors.any? %>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
          <div class="alert alert-danger">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <p><strong>Wops!</strong></p>
            <ul>
            <% @sprint.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        </div>
      <% end %>
    <div class="col-xs-12 col-sm-8 col-md-6 col-lg-6">
              <div class="form-group">
                <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label :start_date %>
          <%= f.date_select :start_date, prompt:false , class: 'form-control' %>
              </div>
        
              <div class="form-group">
                <%= f.label :end_date %>
          <%= f.date_select :end_date, class: 'form-control' %>
              </div>
        
              <div class="form-group">
                <%= f.label :planning_start_date %>
          <%= f.date_select :planning_start_date, class: 'form-control' %>
              </div>
        
              <div class="form-group">
                <%= f.label :planning_end_date %>
          <%= f.date_select :planning_end_date, class: 'form-control' %>
              </div>
        
              <div class="form-group">
                <%= f.label :execution_start_date %>
          <%= f.date_select :execution_start_date, class: 'form-control' %>
              </div>
        
              <div class="form-group">
                <%= f.label :execution_end_date %>
          <%= f.date_select :execution_end_date, class: 'form-control' %>
              </div>
        
              <div class="form-group">
                <%= f.label :review_meeting_date %>
          <%= f.date_select :review_meeting_date, class: 'form-control' %>
              </div>
        
              <div class="form-group">
                <%= f.label :retrospective_meeting_date %>
          <%= f.date_select :retrospective_meeting_date, class: 'form-control' %>
              </div>
        
              <div class="form-group">
                <%= f.label :project_id %>
                <%= f.collection_select(:project_id,Project.all,:id,:name,{:prompt=>true},{class:'form-control'}) %>
              </div>
        
              <div class="form-group">
                <%= f.label :release_id %>
                <%= f.collection_select(:release_id,Release.all,:id,:version,{:prompt=>true},{class:'form-control'}) %>
              </div>
        
              <div class="form-group">
          <%= f.button type: 'submit', class: 'btn btn-primary' do %>
            <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span>
            Salvar
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>    
