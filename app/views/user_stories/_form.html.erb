<div class="container">
  <div class="row">
    <%= form_for(@user_story) do |f| %>

      <% if @user_story.errors.any? %>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
          <div class="alert alert-danger">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <p><strong>Wops!</strong></p>
            <ul>
            <% @user_story.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        </div>
      <% end %>
    <div class="col-xs-12 col-sm-8 col-md-6 col-lg-6">
              <div class="form-group">
                <%= f.label :description %>
          <%= f.text_area :description, class: 'form-control' %>
              </div>
        
              <div class="form-group">
                <%= f.label :business_value %>
          <%= f.number_field :business_value, class: 'form-control' %>
              </div>
        
              <div class="form-group">
                <%= f.label :story_points %>
          <%= f.number_field :story_points, class: 'form-control' %>
              </div>
        
              <div class="form-group">
                <%= f.label :status %>
                <%= f.select :status, options_for_select([:pendent,:development, :completed,:test]), {}, { :class => 'form-control' } %>
              </div>
        
              <div class="form-group">
                <%= f.label :theme_id %>
                <%= f.collection_select( :theme_id,Theme.all,:id,:name, {:prompt=>false},{class:'form-control'} ) %>
              </div>
        
              <div class="form-group">
                <%= f.label :sprint_id %>
                <%= f.collection_select( :sprint_id,Sprint.all,:id,:name, {:prompt=>false},{class:'form-control'} ) %>
              </div>
        
              <div class="form-group">
          <%= f.button type: 'submit', class: 'btn btn-primary' do %>
            <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span>
            Salvar
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>    
